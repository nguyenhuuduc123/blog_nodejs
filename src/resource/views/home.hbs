<div class="mt-4 pl-5">
  <div class="row">
    {{#each course}}
    <div class="col-sm-6 col-lg-4">

      <div class="card" style="width: 18rem;">
        <a href="/course/{{this.slug}}"><img class="card-img-top" src="{{this.image}}" alt="Card image cap"></a>
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.decription}}</p>
          <a href="#" class="btn btn-primary">mua khóa học</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>